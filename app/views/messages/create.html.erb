<div class="container">
  <div class="row">
		<div class="col-md-4 col-md-offset-4">
  		<div class="panel panel-default">
		  	<div class="panel-heading">
		    	<h3 class="panel-title">Send message</h3>
		 		</div>
		  	<div class="panel-body">
		  		<% if flash[:notice] %>
		  			<%= flash[:notice] %>
		  		<% end %>
		  		<% if flash[:alert] %>
		  			<%= flash[:alert] %>
		  		<% end %>
					<%= form_for(:message, method: :post,
					    url: {action: :send_message}) do |form| %>
					  <fieldset>
					  	<div class="form-group">
					  		<%= form.text_field(:to, class: "form-control", placeholder: "Recipient Phone Number") %>
						  </div>
						  <div class="form-group">
						  	<%= form.text_area(:body, class: "form-control", placeholder: "Message") %>
						  </div>
						  <%= form.submit "Send Message", :class => "btn btn-lg btn-success btn-block" %>
					  </fieldset>
					<% end %>
		    </div>
			</div>
		</div>
	</div>
</div>